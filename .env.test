# Test Environment Variables for SecureHR Logging SDK
# Copy to .env and customize as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=secure-hr-logs

# AWS/LocalStack Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# KMS Configuration (will be created on LocalStack startup)
KMS_KEY_ALIAS=alias/securehr-test-key

# Testcontainers Configuration
TESTCONTAINERS_RYUK_DISABLED=false
TESTCONTAINERS_CHECKS_DISABLE=false
